{% extends "base.html.twig" %}
{% block title %}Gestion de gamas{% endblock %}
{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Gesti√≥n de gamas</h3>
        </div>
    </div>
   <div class="panel-body">
       {% if flash['error'] %}
           <div class="alert alert-danger">{{flash['error']}}</div>
       {%endif%}
        <form role="form" class="form-horizontal" method="POST" action="{{ urlFor('employeeDelete') }}">
        {% if is_admin %} 
            <a href="{{ urlFor('AltaEmpleado') }}" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Alta empleado</a>
        {% endif %}
        <h2>Listado de gamas</h2>
        {% if gamas %}
        <table class="table table-striped col-md-8">
            <thead>
                <tr>
                    <th class='text-center'># gama</th>
                    <th class='text-center'>Nombre</th>
                    <th class='text-center'>Descripcion</th>
                    <th class='text-center'>Imagen</th>
                </tr>
            </thead>
            <tbody>
                {% for gama in gama %}
                <tr>
                          <td class='text-center'>{{ gama['idgama'] }}</td>
                          <td class='text-center'>{{ gama['nombre'] }}</td>
                          <td class='text-center'>{{ gama['descripcion'] }}</td>
                          <td class='text-center'>{{ gama['imagen'] }}</td>
                          <td>
                              <a href='{{ urlFor('EditGama',{'id':gama['idgama']}) }}' class='btn btn-primary' role='button'><i class="fa fa-pencil fa-fw"></i> Editar</a>
                              <button type='submit' name='borrar' class='btn btn-danger' value='{{ empleado['nieempleado'] }}'><i class="fa fa-trash-o fa-fw"></i> Borrar</button> 
                          </td>
                </tr>
                {% endfor %}   
            </tbody>
        </table>
      {% else %}
          <div class="alert alert-info">No hay gamas para mostrar</div>
      {% endif %}
      </form>
    </div>
{% endblock %}
{% block modal_body %}
 <div class="hidden" id="editor-panel">
 </div>
{% endblock %}

