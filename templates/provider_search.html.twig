{% extends "base.html.twig" %}
{% block title %} GESTIÓN DE PEDIDOS {% endblock %}
{% block content %}
    <div class="col-lg-12">
        <div class='panel panel-default'>
            <div class='panel panel-heading'>
                <h3><i class="fa fa-truck"></i> Proveedores</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="search-provider">Busqueda de proveedores</label>
                    <span class="label tooltip" data-original-title="Busque un proveedor existente introduciendo las primeras letras de su nombre." data-toogle="tooltip" title=""></span>
                    <div class="input-group col-md-4">
                        <input id="search-provider" type="text" placeholder="Buscar el proveedor...." class="form-control" 
                        data-msg-minlength ="El campo busqueda debe ser una cadena con un minimo de 3 caracteres"
                        data-msg-maxlength ="El campo busqueda debe ser una cadena con un maximo de 10 caracteres"
                        data-rule-maxlength ="10"
                        data-rule-minlength ="5"
                        data-rule-required ="true"
                        />
                        <span class="input-group-addon">
                            <i class="fa fa-search"></i>
                        </span>
                    </div>
                    <div class="col-md-3">
                        <a class="btn btn-default" href=""><i class="fa fa-plus"></i>Añadir proveedor</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-12" id="proveedorindex">
            </div>
            
        </div>
    </div>
{% endblock %}
{% block modal_body %}
 <div class="hidden" id="editor-header">
 </div>
 <div class="hidden" id="editor-panel">
 </div>
{% endblock %}
{% block modal_footer %}
    <div id="editor-actions" class="form-group text-center hidden">
        <div class="col-md-8">
            <button type="submit" id="add-cart" name="add-cart" class="btn-default btn-success">Añadir al carrito</button>
            <a id='view-cart' name='view-cart'>Ver carrito</a>
        </div>
    </div>
{% endblock %}

                            