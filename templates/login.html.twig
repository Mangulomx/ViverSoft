{% extends 'base.html.twig' %}
{% block content1 %}
    <div class="loginbox">
    <div class="panel panel-primary">
        <div class="panel-heading center-block">{{ title }}</div>
        <div class="panel-body">
            <form role="form"  method="post" action="{{ url }}">
                {% if flash['error'] %}
                    <div class="alert alert-danger">
                        {{ flash['error'] }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="username">Nombre de usuario</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input class="form-control" type="text" name="user" placeholder="Introduce tu nombre de usuario" autofocus="true" required />
                    
                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    <input class="form-control" type="password" name="password" placeholder="Introduce tu contraseña" required />
                    </div>
                </div>
                <div class="style1">
                </div>
                 <button type="submit" name="entrar" class="btn btn-primary btn-sm center-block">Entrar</button>
            </form>  
        </div>
    </div>
    </div>
{% endblock %}

