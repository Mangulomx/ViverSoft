{% extends 'base.html.twig' %}
{% block content %}
    <div class="container loginbox">
    <div class="panel panel-primary">
        <div class="panel-heading center-block">{{title}}</div>
        <div class="panel-body">
            <form role="form"  method="post" action="{{url}}">
                {% if flash['error'] %}
                    <div class="alert alert-danger">
                        {{ flash['error'] }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="username">Nombre de usuario</label>
                    <input class="form-control" type="text" name="user" placeholder="Nombre de usuario" autofocus="true" required/>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input class="form-control col-md-4" type="password" name="password" placeholder="Contraseña" required />
                </div>
                <div class="style1">
                </div>
                 <button type="submit" name="entrar" class="btn btn-primary btn-sm center-block">Entrar</button>
            </form>  
        </div>
    </div>
    </div>
{% endblock %}

