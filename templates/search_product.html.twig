{% extends "base.html.twig" %}

{% block title %} GESTIÓN DE PEDIDOS {% endblock %}
{% block content %}
    <div class="panel panel-default">
        <div class="panel panel-heading">
            <h3>GESTIÓN DE PEDIDOS</h3>
        </div>
    </div>
    <div class="panel-body">
        <h2>Realizar pedido:</h2>
        <form role="form" class="form-horizontal" method="post" action="{{ urlFor()}}">
            <div class="row">
                <div class="col-md-4 col-xs-4">
                    <div class="form-group text-center">
                        <label class="col-md-4 control-label" for="inputproducts">Buscar producto:</label>
                    </div>
                </div>
                <div class="col-md-5">
                    <input id="inputproducts" name="inputproducts" class="form-control input-md" placeholder="Buscar un producto ...." type="text" />
                </div>
                <div class="col-md-1">
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" name="searchproducts" id="searchproducts">Buscar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
{% block modal_body %}
    <div class="hidden" id="editor-panel"></div>
{% endblock %}